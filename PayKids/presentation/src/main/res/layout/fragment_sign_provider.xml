<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:fitsSystemWindows="true">

    <TextView
        style="@style/text_bold_12px"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/nanumsquare_bold"
        android:text="@string/text_kakao_login"
        android:textColor="@color/white"

        app:layout_constraintBottom_toTopOf="@id/btn_kakao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_kakao"
        style="@style/button_bold_16px"
        android:layout_width="320dp"

        android:layout_height="50dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/shape_radius_5_with_stroke"
        android:backgroundTint="#FAE100"

        android:paddingStart="4dp"
        android:text="@string/text_kakao_login_btn"
        android:textColor="@color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_kakao"
        android:layout_width="32dp"
        android:layout_height="32dp"

        android:layout_marginStart="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_logo_provider_kakao"
        android:translationZ="10dp"

        app:layout_constraintBottom_toBottomOf="@id/btn_kakao"
        app:layout_constraintStart_toStartOf="@id/btn_kakao"

        app:layout_constraintTop_toTopOf="@id/btn_kakao"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>